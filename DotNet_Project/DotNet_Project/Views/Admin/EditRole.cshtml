@model DotNet_Project.Models.Role

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main_content_iner">
    <div class="container-fluid p-0">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <!-- Left Section (Product Information) -->
                <div class="col-md-12 col-12">
                    <div class="white_box mb_30">
                        <div class="box_header row">
                            <div class="main-title col">
                                <h3 class="mb-0">Edit Roles</h3>
                            </div>
                            <div class="col d-flex justify-content-end">
                                <a asp-action="ShowRole">Back to List</a>
                            </div>
                        </div>

                        <!-- Title -->
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Name" class="control-label" for="productTitle">Name</label>
                                <input asp-for="Name" class="form-control" class="form-control" id="productTitle"
                                       placeholder="Enter Role" required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid gap-2">
                <input type="submit" value="Submit" class="btn btn-primary btn-lg my-3">
            </div>
        </form>

    </div>
</div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

