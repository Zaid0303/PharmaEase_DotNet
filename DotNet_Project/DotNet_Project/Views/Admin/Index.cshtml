
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="single_element">
                    <div class="quick_activity">
                        <div class="row">
                            <div class="col-12">
                                <div class="quick_activity_wrap">
                                    <div class="single_quick_activity d-flex">
                                        <div class="count_content count_content2">
                                            <h3><span class="counter blue_color">@ViewData["TotalProducts"]</span></h3>
                                            <p>Products</p>
                                        </div>
                                    </div>
                                    <div class="single_quick_activity d-flex">
                                        <div class="count_content count_content2">
                                            <h3><span class="counter red_color">@ViewData["TotalOrderDetails"]</span></h3>
                                            <p>Order Details</p>
                                        </div>
                                    </div>
                                    <div class="single_quick_activity d-flex">
                                        <div class="count_content count_content2">
                                            <h3><span class="counter yellow_color">@ViewData["TotalCategories"]</span></h3>
                                            <p>Categories</p>
                                        </div>
                                    </div>
                                    <div class="single_quick_activity d-flex">
                                        <div class="count_content count_content2">
                                            <h3><span class="counter green_color">@ViewData["TotalUsers"]</span></h3>
                                            <p>Users</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-xl-12">
                <div class="white_box mb_30">
                    <div class="box_header border_bottom_1px">
                        <div class="main-title">
                            <h3 class="mb_25">Order Survey</h3>
                        </div>
                    </div>
                    <div class="income_servay">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="count_content">
                                    <h3><span class="counter">@ViewData["MinOrderPrice"]</span></h3>
                                    <p>Lowest Order Price</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="count_content">
                                    <h3><span class="counter">@ViewData["MaxOrderPrice"]</span></h3>
                                    <p>Highest Order Price</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="count_content">
                                    <h3><span class="counter">@ViewData["TotalOrderDetails"]</span></h3>
                                    <p>Total Order Count</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="count_content">
                                    <h3><span class="counter">@ViewData["TotalUsers"]</span></h3>
                                    <p>Total Users</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="bar_wev"></div>
                </div>
            </div>

        </div>
    </div>
</div>