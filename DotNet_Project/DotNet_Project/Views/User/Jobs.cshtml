@model IEnumerable<DotNet_Project.Models.Job>

@{
    ViewData["Title"] = "Jobs";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="blog-list section-padding">
    <div class="container">
        <div class="row row-cols-xl-3 row-cols-md-2 row-cols-1">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="iq-blog blog-standard position-relative">
                        <a asp-action="JobDetails" asp-controller="User" asp-route-id="@item.Id" class="blog-image d-block overflow-hidden">
                            <img src="@Html.DisplayFor(modelItem => item.Image)" alt="blog-image" class="img-fluid w-100"
                             loading="lazy">
                    </a>
                    <div class="iq-post-details bg-white p-4">
                        <div class="blog-title mb-2 mt-3">
                                <a asp-action="JobDetails" asp-controller="User" asp-route-id="@item.Id">
                                    <h5 class="text-capitalize">@Html.DisplayFor(modelItem => item.Title)</h5>
                            </a>
                        </div>
                        <div class="iq-blog-meta mt-3">
                            <ul class="list-inline">
                                <li class="list-inline-item text-uppercase">
                                        <a asp-action="JobDetails" asp-controller="User" asp-route-id="@item.Id">
                                        <i class="far fa-clock me-1" aria-hidden="true"></i>
                                            <span>@Html.DisplayFor(modelItem => item.EmpType)</span>
                                    </a>
                                </li>
                                <li class="list-inline-item text-uppercase">
                                        <a asp-action="JobDetails" asp-controller="User" asp-route-id="@item.Id">
                                        <i class="fas fa-map-marker-alt me-1" aria-hidden="true"></i>
                                            <span>@Html.DisplayFor(modelItem => item.Location)</span>
                                    </a>
                                </li>
                            </ul>
                            <div class="iq-blog-cat bg-primary text-white d-inline">
                                    <a asp-action="JobDetails" asp-controller="User" asp-route-id="@item.Id" class="text-white">
                                       PKR - @Html.DisplayFor(modelItem => item.Salary)
                                </a>
                            </div>
                        </div>

                        <div class="blog-button mt-3">
                            <div class="iq-btn-container">
                                    <a class="iq-button iq-btn-link text-capitalize" asp-action="JobDetails" asp-controller="User" asp-route-id="@item.Id">
                                    More Details
                                    <span class="btn-link-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 8 8" fill="none">
                                            <path d="M7.32046 4.70834H4.74952V7.25698C4.74952 7.66734 4.41395 8 4 8C3.58605 8 3.25048 7.66734 3.25048 7.25698V4.70834H0.679545C0.293423 4.6687 0 4.34614 0 3.96132C0 3.5765 0.293423 3.25394 0.679545 3.21431H3.24242V0.673653C3.28241 0.290878 3.60778 0 3.99597 0C4.38416 0 4.70954 0.290878 4.74952 0.673653V3.21431H7.32046C7.70658 3.25394 8 3.5765 8 3.96132C8 4.34614 7.70658 4.6687 7.32046 4.70834Z" fill="currentColor"></path>
                                        </svg>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>