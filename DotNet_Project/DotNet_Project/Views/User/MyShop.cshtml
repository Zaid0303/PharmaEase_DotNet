                            <div class="custom-form-field shop-search position-relative">
                                <input type="search" name="xyz" placeholder="Search Products..."
                                       class="form-control mb-5 bg-white border" required>
                                <button type="submit"
                                        class="position-absolute end-0 top-0 text-body p-0 border-0 bg-transparent cursor-pointer">
                                    <svg class="icon-20" width="22" viewBox="0 0 24 24" fill="none"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <circle cx="11.7669" cy="11.7666" r="8.98856" stroke="currentColor" stroke-width="1.5"
                                                stroke-linecap="round" stroke-linejoin="round"></circle>
                                        <path d="M18.0186 18.4851L21.5426 22" stroke="currentColor" stroke-width="1.5"
                                              stroke-linecap="round" stroke-linejoin="round"></path>
                                    </svg>
                                </button>
                            </div>
                        </form>

                        <h4 class="product-title mb-4">Product Categories</h4>
                        <ul class="p-0 mb-5 list-unstyled">
                            <!-- All Products Option -->
                            <li class="shop-cat-item border-0 pb-0">
                                <a href="@Url.Action("MyShop", new { categoryId = "all" })" class="position-relative text-uppercase letter-spacing-2">
                                    All Products
                                </a>
                            </li>

                            <!-- Loop through categories -->
                            @foreach (var category in ViewBag.CategoriesWithCounts)
                            {
                                <li class="shop-cat-item border-0 pb-0">
                                    <a href="@Url.Action("MyShop", new { categoryId = category.Id })" class="position-relative text-uppercase letter-spacing-2">
                                        @category.Name
                                    </a>
                                    <span class="archiveCount fw-500 ms-1">(@category.ProductCount)</span>
                                </li>
                            }
                        </ul>


                        <!-- Product Display Section -->
                        <div id="productDisplay">
                            @if (ViewBag.Products != null && ViewBag.Products.Any())
                            {
                                <ul>
                                    @foreach (var product in ViewBag.Products)
                                    {
                                        <li>
                                            <a href="@Url.Action("ProductDetail", new { id = product.Id })">
                                                <img src="@product.ImageUrl" alt="@product.Name" />
                                                <span>@product.Name</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
