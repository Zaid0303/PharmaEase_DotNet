<!-- Google Font -->
<link rel="preconnect" href="https://fonts.googleapis.com/">
<link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;400;500;600;700&amp;family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,300;1,400;1,500&amp;display=swap"
      rel="stylesheet">

<main class="main-content">
    <div class="section-padding product-detail">
        <div class="container">
            <div class="row">
            @foreach (var item in Model) {
                    <input type="hidden" name="Id" value="@item.Id" />
                <div class="col-lg-6">
                    <div class="position-relative">
                        <a data-fslightbox="product" href="assets/images/shop/product-3.html">
                                <img src="@Html.DisplayFor(modelItem => item.Image)" class="img-fluid"
                                 alt="product-image" loading="lazy">
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                        <h4 class="price mt-3 mb-0">PKR - @Html.DisplayFor(modelItem => item.Price)</h4>
                    <p class="mt-4 mb-0">
                            @Html.DisplayFor(modelItem => item.Description)
                    </p>
                    <div class="add-product-wrapper mt-5 pb-5 mb-5 border-bottom">
                        <ul class="list-inline m-0 p-0 d-flex align-items-center gap-5 flex-wrap">
                            <li>
                                     @if (User.Identity.Name != null)
                                    {

                                        if (item.Quantity == 0)
                                        {
                                            <input type="button" value="Out of Stock" class="btn btn-default" />


                                        }

                                        else
                                        {
                                            <div class="iq-btn-container">
                                                <a class="iq-button text-capitalize" asp-action="cart" asp-controller="User" asp-route-id="@item.Id">
                                                    <span class="iq-btn-text-holder position-relative">Add to Cart</span>
                                                    <span class="iq-btn-icon-holder">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 8 8" fill="none">
                                                            <path d="M7.32046 4.70834H4.74952V7.25698C4.74952 7.66734 4.41395 8 4 8C3.58605 8 3.25048 7.66734 3.25048 7.25698V4.70834H0.679545C0.293423 4.6687 0 4.34614 0 3.96132C0 3.5765 0.293423 3.25394 0.679545 3.21431H3.24242V0.673653C3.28241 0.290878 3.60778 0 3.99597 0C4.38416 0 4.70954 0.290878 4.74952 0.673653V3.21431H7.32046C7.70658 3.25394 8 3.5765 8 3.96132C8 4.34614 7.70658 4.6687 7.32046 4.70834Z" fill="currentColor"></path>
                                                        </svg>
                                                    </span>
                                                </a>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <a asp-action="Login" asp-controller="Cookies" asp-route-id="@item.Id" class="btn btn-danger">Please Login</a>

                                    } 
                            </li>
                        </ul>
                    </div>
                    <div class="product-meta-wrapper">
                            <ul class="list-inline m-0 p-0">
                                <li class="mb-2">
                                    <span>Strength :</span>
                                    <h6 class="d-inline">@Html.DisplayFor(model => item.Strength)</h6>
                                </li>
                                <li class="mb-2">
                                    <span>Category :</span>
                                    <h6 class="d-inline">@Html.DisplayFor(model => item.CIdNavigation.Name)</h6>
                                </li>
                            </ul>

                    </div>
                </div>
            }
            </div>


        </div>
    </div>

</main>


