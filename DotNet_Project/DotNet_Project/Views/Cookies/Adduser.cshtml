<body class=" body-bg landing-pages">
    <span class="screen-darken"></span>
    <!-- loader Start -->
    <!-- loader END -->
    <main class="main-content">
        <div class="position-relative">
            <!--Nav Start-->
            <!--bread-crumb-->
            <!--bread-crumb-->

        </div>
        <div class="sign-in-page position-relative">
            <div class="container">
                <div class="row justify-content-center align-items-center height-self-center h-100">
                    <div class="col-lg-5 col-md-12 align-self-center">
                        <div class="sign-user_card position-relative bg-white mx-auto">
                            <div class="logo-img text-center mb-5">
                                <a asp-action="Index" asp-controller="User" class="navbar-brand m-0">
                                    <span class="logo-normal">
                                        <img src="~/User/assets/images/logo/logo2.png" alt="logo" class="img-fluid" loading="lazy">
                                    </span>
                                </a>
                            </div>
                            <form asp-action="Adduser">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="custom-form-field">
                                    <input asp-for="Name" type="text" placeholder="Your Name *" class="form-control mb-5" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="custom-form-field">
                                    <input asp-for="Email" type="email" placeholder="Your email *" class="form-control mb-5" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="custom-form-field position-relative">
                                    <input asp-for="Password" type="password" placeholder="Your Password *" class="form-control mb-5" id="passwordInput" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                    <!-- Font Awesome Show/Hide Icon -->
                                    <span class="password-toggle-icon position-absolute" onclick="togglePasswordVisibility()" style="right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;">
                                        <i id="toggleIcon" class="fas fa-eye"></i>
                                    </span>
                                </div>

                                <input type="submit" class="iq-button text-capitalize border-0" value="register">
                            </form>

                            <script>
                                function togglePasswordVisibility() {
                                    const passwordInput = document.getElementById("passwordInput");
                                    const toggleIcon = document.getElementById("toggleIcon");

                                    if (passwordInput.type === "password") {
                                        passwordInput.type = "text";
                                        toggleIcon.classList.remove("fa-eye");
                                        toggleIcon.classList.add("fa-eye-slash");
                                    } else {
                                        passwordInput.type = "password";
                                        toggleIcon.classList.remove("fa-eye-slash");
                                        toggleIcon.classList.add("fa-eye");
                                    }
                                }

                            </script>

                            <div class="d-flex align-items-center mt-3">
                                <p class="my-0 text-capitalize">Already have an account?</p>
                                <h5 class="sign_up_btn mb-0 ms-2">
                                    <div class="iq-btn-container">
                                        <a class="iq-button iq-btn-link text-capitalize" asp-action="Login">
                                            sign in
                                            <span class="btn-link-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 8 8" fill="none">
                                                    <path d="M7.32046 4.70834H4.74952V7.25698C4.74952 7.66734 4.41395 8 4 8C3.58605 8 3.25048 7.66734 3.25048 7.25698V4.70834H0.679545C0.293423 4.6687 0 4.34614 0 3.96132C0 3.5765 0.293423 3.25394 0.679545 3.21431H3.24242V0.673653C3.28241 0.290878 3.60778 0 3.99597 0C4.38416 0 4.70954 0.290878 4.74952 0.673653V3.21431H7.32046C7.70658 3.25394 8 3.5765 8 3.96132C8 4.34614 7.70658 4.6687 7.32046 4.70834Z" fill="currentColor"></path>
                                                </svg>
                                            </span>
                                        </a>
                                    </div>
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>
